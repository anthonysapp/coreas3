package core.utils {	import flash.display.DisplayObjectContainer;		/**	 * @author Sapper	 */	public class ContainerUtil {		public static function removeChildrenExcept(container : DisplayObjectContainer, childrenNotToRemove : *) : void {			var index : uint = container.numChildren;			if ((childrenNotToRemove is Array) == false) {				while (index--) {					if (container.getChildAt(index) != childrenNotToRemove)container.removeChildAt(index);				}			}			else {				var arr : Array = childrenNotToRemove as Array;				if (container.numChildren <= arr.length)return;				var canRemove : Boolean = true;				while (index--) {					for (var n : int = 0;n < arr.length; n++) {						if (container.getChildAt(index) == arr[n]) {							canRemove = false; 							break;						}						if (canRemove)container.removeChildAt(index);					}				}			}		}		public static function removeChildren(container : DisplayObjectContainer) : void {			if (container.numChildren == 0)return;			while (container.numChildren > 0) {				container.removeChildAt(0);			}		}
		public static function removeChildrenExceptAt(container : DisplayObjectContainer,index : int) : void {			if (container.numChildren < index)return;			if (container.numChildren <= 1)return;			var n : int = container.numChildren;			while (n--) {				if (n != index) {					container.removeChildAt(n);				}			}		}	}}